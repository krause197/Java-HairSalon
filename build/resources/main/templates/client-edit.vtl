<h1>EDIT CLIENT INFORMATION: $client.getName()</h1>

<form action="/stylists/$stylist.getId()/clients/$client.getId()/edit" method="post">
  <input type="hidden" name="stylist_id" value="$stylist.getId()">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" name="name" class="form-control" value="$client.getName()">
  </div>
  <div class="form-group">
    <label for="notes">NOTES</label>
    <input type="text" name="notes" class="form-control" value="$client.getNote()">
  </div>
  <button class="btn btn-primary" type="submit" name="update">SUBMIT</button>
</form>

<a href="/stylists/$client.getStylistId()/clients/$client.getId()/delete"><button class="btn btn-danger" type="button" name="delete">Delete</button></a>
